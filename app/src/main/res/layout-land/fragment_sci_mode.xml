<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SciModeFragment">


    <Button
        android:id="@+id/buttonSin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/sin"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonLn"
        app:layout_constraintEnd_toStartOf="@+id/buttonCos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/cos"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonLog"
        app:layout_constraintEnd_toStartOf="@+id/buttonTan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonSin"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/tan"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonFact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonCos"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/lg"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonExp"
        app:layout_constraintEnd_toStartOf="@+id/buttonFact"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonLn"
        app:layout_constraintTop_toBottomOf="@+id/buttonCos" />

    <Button
        android:id="@+id/buttonLn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/ln"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonPi"
        app:layout_constraintEnd_toStartOf="@+id/buttonLog"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSin" />

    <Button
        android:id="@+id/buttonFact"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/fact"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonPow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonLog"
        app:layout_constraintTop_toBottomOf="@+id/buttonTan" />

    <Button
        android:id="@+id/buttonPi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/pi"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonOpeningBr"
        app:layout_constraintEnd_toStartOf="@+id/buttonExp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLn" />

    <Button
        android:id="@+id/buttonExp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/exp"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonClosingBr"
        app:layout_constraintEnd_toStartOf="@+id/buttonPow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonPi"
        app:layout_constraintTop_toBottomOf="@+id/buttonLog" />

    <Button
        android:id="@+id/buttonPow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/pow"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toTopOf="@+id/buttonSqrt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonExp"
        app:layout_constraintTop_toBottomOf="@+id/buttonFact" />

    <Button
        android:id="@+id/buttonOpeningBr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/opened"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonClosingBr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPi" />

    <Button
        android:id="@+id/buttonClosingBr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/closed"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSqrt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonOpeningBr"
        app:layout_constraintTop_toBottomOf="@+id/buttonExp" />

    <Button
        android:id="@+id/buttonSqrt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/sqrt"
        android:textSize="@dimen/dimButtonText"
        android:textColor="@color/colorWhitePanel"
        android:background="@color/colorBlackPanel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonClosingBr"
        app:layout_constraintTop_toBottomOf="@+id/buttonPow" />


</androidx.constraintlayout.widget.ConstraintLayout>